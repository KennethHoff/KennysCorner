---
import type { HTMLAttributes } from 'astro/types';
type Props = Omit<HTMLAttributes<'a'>, 'datetime'> & {
    datetime: Date;
}

const { datetime, ...spreadable } = Astro.props;

const dateTimeFormat = new Intl.DateTimeFormat('en-GB', {
    dateStyle: 'full',
});
---

<time {...spreadable} datetime={datetime.toUTCString()}>{dateTimeFormat.format(Astro.props.datetime)}</time>
