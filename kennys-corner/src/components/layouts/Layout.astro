---
import "src/global.css";
export interface Props {
    metadata: {
        title: string;
        description?: string | undefined;
    };
}

const {
    metadata: { title, description },
} = Astro.props;
---

<html lang="en">
    <head>
        <slot name="head-start" />
        <link href="/favicon.svg" rel="icon" type="image/svg+xml" />
        <link href="/sitemap-index.xml" rel="sitemap" />

        <title>{title}</title>
        <meta charset="utf-8" />
        <meta content="width=device-width" name="viewport" />
        <meta content={Astro.generator} name="generator" />
        {description ? <meta content={description} name="description" /> : null}
        <slot name="head-meta" />

        <slot name="head-end" />
    </head>
    <body class="grid grid-cols-(--primary-grid-template-columns) gap-x-(--primary-grid-column-gap)">
        <header class="col-[breakout] grid grid-cols-subgrid"><slot name="header">header</slot></header>
        <main class="col-[breakout] grid grid-cols-subgrid">
            <slot />
        </main>
        <footer class="col-[breakout] grid grid-cols-subgrid"><slot name="footer">footer</slot></footer>
    </body>
</html>
